# Cloud-only deployment environment variables
# Copy to .env.local for local testing or set in Vercel dashboard for production

# Frontend environment variables (VITE_ prefix)
VITE_CLOUD_ONLY=true
VITE_ELIZACLOUD_BASE=https://www.elizacloud.ai
VITE_DISCORD_CLIENT_ID=your_discord_client_id_here
VITE_DISCORD_REDIRECT_URI=https://milady.fun/discord-callback

# Backend environment variables (if running backend separately)
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=https://milady.fun/discord-callback
DISCORD_BOT_PERMISSIONS=2048
DISCORD_BOT_TOKEN=your_bot_token_here

# ElizaCloud API (optional, for backend proxying)
ELIZACLOUD_API_BASE=https://www.elizacloud.ai

# JWT secret for backend authentication
JWT_SECRET=your-secret-key-change-in-production

# Database connection (for Discord connection tracking)
DATABASE_URL=postgresql://user:password@localhost:5432/milaidy
